@page
@model Jube.App.Pages.Administration.Frame.VisualisationRegistryDatasource

@{
    Layout = null;
}

<script src="/js/CRUD.js"></script>
<script src="/js/Administration/Frame/VisualisationRegistryDatasource.js"></script>

<form id="Form" class="k-form">
    <body>
    <div class="fCStyle">
        <table id="TemplateTable" class="tTStyle">
            <tr>
                <td>
                    <label for="Name">Name</label>
                </td>
                <td>
                    <input type="text" id="Name" class="k-textbox large" name="Name" required validationMessage="Please enter a valid Name.">
                    <span class="k-invalid-msg" data-for="Name"></span>
                </td>
            </tr>
            <tr>
                <td>
                    <label for="Active" class="k-checkbox-label">Active</label>
                </td>
                <td>
                    <input id="Active" type="checkbox"/>
                </td>
            </tr>
            <tr>
                <td>
                    <label for="Locked" class="k-checkbox-label">Locked</label>
                </td>
                <td>
                    <input id="Locked" type="checkbox"/>
                </td>
            </tr>
            <tr>
                <td><label for="Priority">Priority</label></td>
                <td>
                    <input type="text" id="Priority" value="0" name="Priority" required validationMessage="Please enter a name"/>
                </td>
            </tr>
            <tr>
                <td><label for="ColumnSpan">Column Span</label></td>
                <td>
                    <input type="text" id="ColumnSpan" value="0" name="ColumnSpan" required/>
                </td>
            </tr>
            <tr>
                <td><label for="RowSpan">Row Span</label></td>
                <td>
                    <input type="text" id="RowSpan" value="0" name="RowSpan" required/>
                </td>
            </tr>
            <tr>
                <td><label for="coderBacking">SQL</label></td>
                <td>
                    <div id="coderBacking" class="coder"></div>
                </td>
            </tr>
            <tr>
                <td><label for="IncludeGrid">Include Grid</label></td>
                <td>
                    <input id="IncludeGrid" type="checkbox"/>
                </td>
            </tr>
            <tr>
                <td><label for="IncludeDisplay">Include Display</label></td>
                <td>
                    <input id="IncludeDisplay" type="checkbox"/>
                    <table id="DisplayTable" class="sTStyle">
                        <tr>
                            <td class="sTBorderStyle"><label>Display Type</label></td>
                            <td>
                                <ul class="fieldlist">
                                    <li>
                                        <input type="radio" checked="checked" class="k-radio" id="VisualisationTypeChart" name="VisualisationType" value="1"/>
                                        <label class="k-radio-label" for="VisualisationTypeChart">Chart Javascript</label>
                                    </li>
                                    <li>
                                        <input type="radio" class="k-radio" id="VisualisationTypeMap" name="VisualisationType" value="2"/>
                                        <label class="k-radio-label" for="VisualisationTypeMap">Map Javascript</label>
                                    </li>
                                    <li>
                                        <input type="radio" class="k-radio" id="VisualisationTypeHTML" name="VisualisationType" value="3"/>
                                        <label class="k-radio-label" for="VisualisationTypeHTML">HTML</label>
                                    </li>
                                </ul>
                            </td>
                        </tr>
                        <tr class="sTBorderStyle">
                            <td><label for="coderDisplay">Display Text</label></td>
                            <td>
                                <div id="coderDisplay" class="coder"></div>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
            <tr>
                <td>
                    <label for="Version">Version</label>
                </td>
                <td>
                    <div id="Version"></div>
                </td>
            </tr>
            <tr>
                <td>
                    <label for="CreatedUser">User Created</label>
                </td>
                <td>
                    <div id="CreatedUser"></div>
                </td>
            </tr>
            <tr>
                <td>
                    <label for="CreatedDate">Created Date</label>
                </td>
                <td>
                    <div id="CreatedDate"></div>
                </td>
            </tr>
        </table>
        <div class="footerStyle">
            <div id="ErrorMessage" class="errorMessage"></div>
            <button type="button" id="Add" class="ButtonDefault">Add</button> 
            <button type="button" id="Update" class="ButtonDefault">Update</button> 
            <button type="button" id="Delete" class="ButtonDefault">Delete</button>
        </div>
    </div>
    </body>
</form>