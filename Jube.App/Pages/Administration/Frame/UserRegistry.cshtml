@page
@model Jube.App.Pages.Administration.Frame.UserRegistry

@{
    Layout = null;
}

<script src="/js/CRUD.js"></script>
<script src="/js/Administration/Frame/UserRegistry.js"></script>
<form id="Form" class="k-form">
    <body>
    <div class="fCStyle">
        <table id="TemplateTable" class="tTStyle">
            <tr>
                <td>
                    <label for="Name">Name</label>
                </td>
                <td>
                    <input type="text" id="Name" class="k-textbox large" name="Name" required validationMessage="Please enter a valid Name.">
                    <span class="k-invalid-msg" data-for="Name"></span>
                </td>
            </tr>
            <tr>
                <td><label for="RoleRegistryId">Role</label></td>
                <td>
                    <select id="RoleRegistryId"></select>
                </td>
            </tr>
            <tr>
                <td>
                    <label for="Email">Email</label>
                </td>
                <td>
                    <input type="text" id="Email" class="k-textbox large" name="Email" required validationMessage="Please enter a valid Email.">
                    <span class="k-invalid-msg" data-for="Name"></span>
                </td>
            </tr>
            <tr>
                <td>
                    <label for="Active" class="k-checkbox-label">Active</label>
                </td>
                <td>
                    <input id="Active" type="checkbox"/>
                </td>
            </tr>
            <tr>
                <td>
                    <label for="PasswordLocked" class="k-checkbox-label">Password Locked</label>
                </td>
                <td>
                    <input id="PasswordLocked" type="checkbox"/>
                </td>
            </tr>            
            <tr>
                <td>
                    <label for="Version">Version</label>
                </td>
                <td>
                    <div id="Version"></div>
                </td>
            </tr>
            <tr>
                <td>
                    <label for="CreatedUser">User Created</label>
                </td>
                <td>
                    <div id="CreatedUser"></div>
                </td>
            </tr>
            <tr>
                <td>
                    <label for="CreatedDate">Created Date</label>
                </td>
                <td>
                    <div id="CreatedDate"></div>
                </td>
            </tr>
        </table>
        <div class="footerStyle">
            <div id="ErrorMessage" class="errorMessage"></div>
            <button type="button" id="Add" class="ButtonDefault">Add</button> 
            <button type="button" id="Update" class="ButtonDefault">Update</button> 
            <button type="button" id="Delete" class="ButtonDefault">Delete</button> 
            <button type="button" id="Reset" class="ButtonDefault">Get Temporary Password</button>
            <span id="Processing" class="updating">Processing</span>
        </div>
        <table id="PasswordTable" class="tTStyle">
            <tr>
                <td>
                    <label for="Password">Temporary Password</label>
                </td>
                <td>
                    <input id="Password" class="k-textbox large" name="Password">
                </td>
            </tr>
            <tr>
                <td>
                    <label for="PasswordExpiry">Password Expires</label>
                </td>
                <td>
                    <div id="PasswordExpiry"></div>
                </td>
            </tr>
        </table>
    </div>
    </body>
</form>