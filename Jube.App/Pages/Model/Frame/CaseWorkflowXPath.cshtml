@page
@model Jube.App.Pages.Model.Frame.CaseWorkflowXPath

@{
    Layout = null;
}

<script src="/js/CRUD.js"></script>
<script src="/js/Model/Frame/CaseWorkflowXPath.js"></script>

<form id="Form" class="k-form">
    <body>
    <div class="fCStyle">
        <table id="TemplateTable" class="tTStyle">
            <tr>
                <td>
                    <label for="Name">Name</label>
                </td>
                <td>
                    <input type="text" id="Name" class="k-textbox large" name="Name" required validationMessage="Please enter a valid Name.">
                    <span class="k-invalid-msg" data-for="Name"></span>
                </td>
            </tr>
            <tr>
                <td>
                    <label for="Active" class="k-checkbox-label">Active</label>
                </td>
                <td>
                    <input id="Active" type="checkbox"/>
                </td>
            </tr>
            <tr>
                <td>
                    <label for="Locked" class="k-checkbox-label">Locked</label>
                </td>
                <td>
                    <input id="Locked" type="checkbox"/>
                </td>
            </tr>
            <tr>
                <td>
                    <label for="XPath">Field</label>
                </td>
                <td>
                    <select id="XPath">
                    </select>
                </td>
            </tr>
            <tr>
                <td>
                    <label for="BoldLineMatched">Bold Line Matched</label>
                </td>
                <td>
                    <input id="BoldLineMatched" type="checkbox"/>
                    <table id="BoldLineMatchedTable" class="sTStyle">
                        <tr>
                            <td class="sTBorderStyle">
                                <label for="BoldLineForePicker">
                                    Bold Line Format Fore Color
                                </label>
                            </td>
                            <td>
                                <input id="BoldLineForePicker"/>
                            </td>
                        </tr>
                        <tr>
                            <td class="sTBorderStyle">
                                <label for="BoldLineBackPicker">
                                    Bold Line Format Back Color
                                </label>
                            </td>
                            <td>
                                <input id="BoldLineBackPicker"/>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
            <tr>
                <td>
                    <label for="Drill">Drill</label>
                </td>
                <td>
                    <input id="Drill" type="checkbox"/>
                </td>
            </tr>
            <tr>
                <td>
                    <label for="ConditionalRegularExpressionFormatting">
                        Conditional Formatting
                    </label>
                </td>
                <td>
                    <input id="ConditionalRegularExpressionFormatting" type="checkbox"/>
                    <table id="ConditionalRegularExpressionFormattingTable" class="sTStyle">
                        <tr>
                            <td class="sTBorderStyle">
                                <label for="RegularExpression">
                                    Regular Expression
                                </label>
                            </td>
                            <td>
                                <input type="text" id="RegularExpression" class="k-textbox" name="RegularExpression"/>
                            </td>
                        </tr>
                        <tr>
                            <td class="sTBorderStyle">
                                <label for="ForePicker">
                                    Conditional Format Fore Color
                                </label>
                            </td>
                            <td>
                                <input id="ForePicker"/> <input id="ForeRowColorScope" type="checkbox"/>
                            </td>
                        </tr>
                        <tr>
                            <td class="sTBorderStyle">
                                <label for="BackPicker">
                                    Conditional Format Back Color
                                </label>
                            </td>
                            <td>
                                <input id="BackPicker"/> <input id="BackRowColorScope" type="checkbox"/>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
            <tr>
                <td>
                    <label for="Version">Version</label>
                </td>
                <td>
                    <div id="Version"></div>
                </td>
            </tr>
            <tr>
                <td>
                    <label for="CreatedUser">User Created</label>
                </td>
                <td>
                    <div id="CreatedUser"></div>
                </td>
            </tr>
            <tr>
                <td>
                    <label for="CreatedDate">Created Date</label>
                </td>
                <td>
                    <div id="CreatedDate"></div>
                </td>
            </tr>
        </table>
        <div class="footerStyle">
            <div id="ErrorMessage" class="errorMessage"></div>
            <button type="button" id="Add" class="ButtonDefault">Add</button> 
            <button type="button" id="Update" class="ButtonDefault">Update</button> 
            <button type="button" id="Delete" class="ButtonDefault">Delete</button>
        </div>
    </div>
    </body>
</form>