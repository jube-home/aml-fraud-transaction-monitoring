@page
@model Jube.App.Pages.Watcher.Activation
@{
    Layout = "Shared/_Layout";
}
@section Scripts
{
    <script src="/js/signalr/signalr.js"></script>
    <script src="/js/Watcher/Activation.js"></script>
}
<div class="bottomPaddedGeneral">
    <div id="map"></div>
</div>
<div style="float: left;">
    <label>Realtime: </label>
    <input type="checkbox" id="Active" checked/>
    <label>Map Entity Once: </label>
    <input type="checkbox" id="MapEntityOnce" checked/>
</div>
<div style="float: right;">
    <label for="ReplayFrom">Replay From:</label>
    <input type="text" id="ReplayFrom" name="ReplayFrom"/>
    <label for="ReplayTo">Replay To:</label>
    <input type="text" id="ReplayTo" name="ReplayTo"/>
    <button type="button" id="Replay">Replay</button>
</div>
<div style="clear: both;"></div>
<div class="bottomPaddedGeneral">
    <div id="chart"></div>
</div>
<div id="Status"></div>
    <div class="bottomPaddedGeneral">
</div>
<div id="grid"></div>